authorityKeyIdentifier=keyid,issuer
basicConstraints=CA:FALSE
keyUsage = digitalSignature, nonRepudiation, keyEncipherment, dataEncipherment
subjectAltName = @alt_names
[alt_names]
DNS.1 = arch.local # Be sure to include the domain name here because Common Name is not so commonly honoured by itself
DNS.2 = www.arch.local # Optionally, add additional domains (I've added a subdomain here)
IP.1 = 192.168.0.5 # Optionally, add an IP address (if the connection which you have planned requires it)
